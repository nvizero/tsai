
<div class="col-lg-12">
  <h1>Listing trades</h1>
    <div class="table-responsive">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>


  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.id %></td>
        <td><%= trade.description %></td>

        <td>
            <%= link_to 'Show', trade %>|
            <%= link_to 'Edit', edit_trade_path(trade) %>|
            <%= link_to 'Destroy', trade, method: :deadmine, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>


      </div>
  </div>




<br>

