
<section class="content">
  <div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">角色名稱列表</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">


              <table id="example2" class="table table-bordered table-striped">




  <thead>
    <tr>
      <th>角色名稱</th>

      <th>
        <%= link_to '新增角色', new_role_path %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.title %></td>
        <td>

            <%= link_to '編輯', edit_role_path(role) %>
            <a url="#" class="del" id='/roles/destroy/<%=role.id %>'> 停用 </a>
        </td>
      </tr>
    <% end %>
  </tbody>





</table>
<%= paginate @roles  %>
</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){

      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

  })
</script>

</div>
</div>
</div>
</section><!-- /.content -->
