

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">商品庫存</h3>
                
                <div class="btn-group" id='head_btn'>
                    <button type="button" class="btn btn-info"><%=(@flag=='Y')?('未停用'):('停用') %></button>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <%= link_to '未停用', {:controller =>'products' , :action =>'index' , :state =>'Y'}  %>
                        </li>

                        <li>
                            <%= link_to '停用', {:controller =>'products' , :action =>'index' , :state =>'N'}  %>
                        </li>
                    </ul>
                </div>

            </div><!-- /.box-header -->
            <div class="box-body table-responsive">


              <table id="example2" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>產品編號</th>
                      <th>分類</th>
                      <th>名稱</th>
                      <th>規格</th>

                      <th>出入庫</th>
                      <th>屬於</th>

                    </tr>
                  </thead>



  <tbody>
    <% @products.each do |product| %>

    <%= render 'comm/info' , :info => product , :users => @users_a , :title => "產品:#{product.title} 訊息"  %>

      <tr>
        <td><%= product.code %></td>
        <td>
          <% if product.verify_type_main %>
            <%= product.verify_type_main.title %>
          <% end %>
        </td>

        <td><%= product.title %></td>
        <td><%= product.specification %></td>

        <td>
          <div style="width:100%;float:left;">
            <span  style="width:25%;float:left;">
                  <% if product.product_in_outs %>
                        <%in_out_cal(product.product_in_outs)%>
                  <% end %>

                  <a class="btn btn-success btn-xs">入庫</a>
                  <span class="text-success">
                    <%=@in_num%>
                  </span>

          </span>

          <span  style="width:25%;float:left;">
              <a class="btn btn-danger btn-xs">出庫</a>
              <span class="text-red">
                <%=@out_num%>
              </span>
          </span>

          <span  style="width:25%;float:left;">
              <a class="btn btn-primary btn-xs">現有</a>
              <span class="text-primary">
                <%=@in_num-@out_num%>
              </span>
          </span>

          </div>

        </td>

        <td>
          <% if product.user %>
            <%= product.user.name %>
          <% end %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products  %>




</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){

      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

      $('.info').click(function(){
          var t_id = $(this).attr('id');
          $('#info-modal'+t_id).modal('show');
      });

  })
</script>

</div>
</div>
</div>
</section><!-- /.content -->
