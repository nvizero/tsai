<style media="screen">
  .main_col{
    margin:5px;
  }

  .col{
    font-size: 14px;
  }

  #col_code{
    width:170px;
    float:left;
  }

  #col_serial{
    width:190px;
    float:left;
  }

  #col_num{
    width:100px;
    float:left;
  }

  #col_store_area{
    width:150px;
    float:left;
  }

  #col_save_date{
    width:150px;
    float:left;
  }



</style>

<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
        <div class="box">
           
            <% @mss ='qqq'%>



            <div class="box-body table-responsive">


              <table id="example2" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th><%= sortable "code" ,'產品編號' %></th>
                      <th><%= sortable "verify_type_main_id" ,'分類' %></th>
                      <th><%= sortable "title" ,'名稱' %></th>
                      <th><%= sortable "specification" ,'規格' %></th>


                      <th>出入庫</th>
                      <th><%= sortable "user_id" ,'屬於' %></th>


                    </tr>
                  </thead>



  <tbody>
    <% @products.each do |product| %>
    <%= render 'comm/in_list' ,  {:mss => @mss  ,  :product => product } %>
    <%= render 'comm/out_list' , {:mss => @mss  ,  :product => product } %>


      <tr>
        <td><%= product.code %></td>
        <td>
          <% if product.verify_type_main %>
            <%= product.verify_type_main.title %>
          <% end %>
        </td>

        <td><%= product.title %></td>
        <td><%= product.specification %></td>

        <td>
          <div style="width:100%;float:left;">
            <span  style="width:25%;float:left;">
                  <% if product.product_in_outs %>
                        <%in_out_cal(product.product_in_outs)%>
                  <% end %>

                  <a class="btn btn-success info btn-xs" id="111<%=product.id %>">入庫</a>
                  <span class="text-success">
                    <%=@in_num%>
                  </span>

          </span>

          <span  style="width:25%;float:left;">
              <a class="btn btn-danger info btn-xs" id="<%=product.id %>">出庫</a>

              <span class="text-red">
                <%=@out_num%>
              </span>
          </span>

          <span  style="width:25%;float:left;">
              <a class="btn btn-primary btn-xs">現有</a>
              <span class="text-primary">
                <%=@in_num-@out_num%>
              </span>
          </span>

          </div>

        </td>

        <td>

          <% if product.user %>
            <%= product.user.name %>
          <% end %>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @products  %>




</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){

      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

      $('.info').click(function(){
          var t_id = $(this).attr('id');
          $('#info-modal'+t_id).modal('show');
      });

  })
</script>

</div>
</div>
</div>
</section><!-- /.content -->
