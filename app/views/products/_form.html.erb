<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>

        <div id="error_explanation"  style="display:none;">
          <% @product.errors.full_messages.each do |msg| %>
            <% @mss = "#{@mss}"+"#{msg}<br>\n" %>
          <% end %>
        </div>
     <% end %>

  <%= render 'comm/ckbox' , :mss => @mss%>
<style media="screen">
  .box-body .row{
    margin-top:10px;
  }
</style>


  <section class="content">
        <div class="row">

            <!-- left column -->
            <div class="col-lg-12">

              <div class="box box-danger">

                <div class="box-header">
                    <h3 class="box-title">
                        <%= label_tag :username ,'紅色',:for =>'exampleInputEmail1' %><font color="red" >*</font>號必填
                    </h3>
                </div>

                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-4">
                          <label>料品編號</label>
                            <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                        </div>

                        <div class="col-xs-4">
                          <label for="">圖號</label>
                            <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                        </div>

                        <div class="col-xs-4">
                          <label>料品分類</label>
                            <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                          <label>MODEL NO</label>
                            <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                        </div>

                        <div class="col-xs-4">
                          <label for="">版別</label>
                            <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                        </div>

                        <div class="col-xs-4">

                          <div class="col-xs-3">
                            <label style="margin-top:15px;">
                              單位
                            </label>
                          </div>

                          <div class="col-xs-9">
                              <div class="col-xs-6">
                                存庫單位
                                <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                              </div>

                              <div class="col-xs-6">
                                輔助單位
                                <input type="text" name="" class="form-control" placeholder=".col-xs-3">
                              </div>
                          </div>
                        </div>
                    </div>
                




  <div class="form-group <% if !@product.errors[:title].blank? %> has-error <% end %> ">
    <%= f.label :title ,'產品名稱'%><font color="red" >*</font>
    <%= f.text_field :title , :class=>'form-control' %>
  </div>

  <div class="form-group <% if !@product.errors[:content].blank? %> has-error <% end %> ">
    <%= f.label :content , '產品內容' %><font color="red" >*</font>
    <%= f.text_area :content, :class=>'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :num ,'主檔分類' %>
    <%= f.select(:verify_type_main_id, @verify_type_mains.map {|m| [m.title , m.id] }) %>
  </div>


  <div class="form-group">
    <%= f.label :num ,'數量' %>
    <%= f.number_field :num %>
  </div>


    <%= f.hidden_field :user_id , :value=>session[:user_id] %>


  <div class="box-footer">
      <button type="submit" class="btn btn-primary">確定</button>
  </div>
<% end %>

</div>
</div>
</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){
    var errors_msg =$('#error_explanation').html();

    if( errors_msg.length > 3 ){
      // alert( errors_msg );
      $('#ckbox-modal').modal('show');
    }


  })
</script>

</div>
</section>
