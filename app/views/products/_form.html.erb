<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>

        <div id="error_explanation"  style="display:none;">
          <% @product.errors.full_messages.each do |msg| %>
            <% @mss = "#{@mss}"+"#{msg}<br>\n" %>
          <% end %>
        </div>
     <% end %>

  <%= render 'comm/ckbox' , :mss => @mss%>



  <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-lg-8">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header">
                        <h3 class="box-title"><%=@table_title %></h3>
                    </div><!-- /.box-header -->



                      <div class="box-body">

                          <div class="form-group">
                            <%= label_tag :username ,'紅色',:for =>'exampleInputEmail1' %><font color="red" >*</font>號必填
                          </div>


  <div class="form-group <% if !@product.errors[:title].blank? %> has-error <% end %> ">
    <%= f.label :title ,'產品名稱'%><font color="red" >*</font>
    <%= f.text_field :title , :class=>'form-control' %>
  </div>

  <div class="form-group <% if !@product.errors[:content].blank? %> has-error <% end %> ">
    <%= f.label :content , '產品內容' %><font color="red" >*</font>
    <%= f.text_area :content, :class=>'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :num ,'主檔分類' %>
    <%= f.select(:verify_type_main_id, @verify_type_mains.map {|m| [m.title , m.id] }) %>
  </div>


  <div class="form-group">
    <%= f.label :num ,'數量' %>
    <%= f.number_field :num %>
  </div>


    <%= f.hidden_field :user_id , :value=>session[:user_id] %>


  <div class="box-footer">
      <button type="submit" class="btn btn-primary">確定</button>
  </div>
<% end %>

</div>
</div>
</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){
    var errors_msg =$('#error_explanation').html();

    if( errors_msg.length > 3 ){
      // alert( errors_msg );
      $('#ckbox-modal').modal('show');
    }


  })
</script>

</div>
</section>
