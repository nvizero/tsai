<%= form_for(@contactu) do |f| %>
  <% if @contactu.errors.any? %>
    <div id="error_explanation">
      <% @contactu.errors.full_messages.each do |msg| %>
        <% @mss = "#{@mss}"+"#{msg}<br>\n" %>
      <% end %>

    </div>
  <% end %>


<%= render 'comm/ckbox' , :mss => @mss%>


  <div class="field">
    <font color="red"><%= f.label :title , '標題' %></font>
    <%= f.text_field :title, :class=>'form-control'  %>
  </div>


  <div class="field">
    <font color="red"><%= f.label :email , 'E-Mail' %></font>
    <%= f.text_field :email, :class=>'form-control'  %>
  </div>



  <div class="field">
    <font color="red"><%= f.label :content , '內容'%></font>
    <%= f.text_area :content %>
  </div>


  <div class="box-footer">
      <button type="submit" class="btn btn-primary">確定</button>
      <%= link_to "取消", :back ,:class =>'btn btn-danger' %>
  </div>

<% end %>





<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    if ($('textarea').length > 0) {
        var data = $('textarea');
        $.each(data, function(i) {

            CKEDITOR.replace(data[i].id);
        });
    }

    var errors_msg =$('#error_explanation').html();

    if( errors_msg.length > 3 ){
      $('#ckbox-modal').modal('show');
    }

});
</script>
