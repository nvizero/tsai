
<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
    $('a#advance_pas').click(function(){

        var username = $('#username').val() ;
        
          if(username!='' &&  username.length > 0){

                //alert(username);

                $.post( 'post_username', { 'username': username },
                  function( data ) {
                      $("#forget_pas").html(
                        "您的密碼提示是 ：  <font color=red>"+data +'</font>');
                  }
                );

          }else{

              alert('請輸入帳號！');

          }

    });
});

</script>

<section class="content">
      <div class="row">
          <!-- left column -->
          <div class="col-lg-8">
<!-- general form elements -->
        <div class="box box-primary">

          <div class="box-header">
              <h3 class="box-title"><%=@table_title %></h3>
              <% if session[:user_id].nil? %>
                <%= session[:user_id]%>
              <% end %>
          </div><!-- /.box-header -->



          <%= form_for(@user , url: {controller: "login" , action: "do_login"}) do |f| %>
              <div class="box-body">
                  <div class="form-group">
                    <%= label_tag :username ,'帳號',:for =>'exampleInputEmail1' %><br>
                    <%= f.text_field :username, :class=>'form-control', :id=>"username", :placeholder=>"輸入帳號" %>
                    <span id="forget_pas"></span>
                  </div>

                  <div class="form-group">
                    <%= label_tag :password ,'密碼',:for =>'exampleInputEmail1' %><br>
                    <%= f.password_field :password , :class=>'form-control', :id=>"password", :placeholder=>"密碼" %>
                  </div>

                  <div class="form-group">
                    <a href="/forget_pas">忘記密碼</a>|
                    <a href="#" id="advance_pas" >密碼提示</a>
                  </div>
              </div>

              <div class="box-footer">
                  <button type="submit" class="btn btn-primary">登入</button>
              </div>
            <% end %>
          </div>
      </div>
  </div>
</section>
