
<section class="content">
  <div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">權限列表</h3>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">


              <table id="example2" class="table table-bordered table-striped">


  <thead>
    <tr>
      <th>名稱</th>
      <th>代碼</th>
      <th>
        <% if judgment_access 'accesses/new' %>
            <%= link_to '新增權限', new_access_path %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @accesses.each do |access| %>
      <tr>
        <td><%= access.title %></td>
        <td><%= access.code %></td>
        <td>
            <% if judgment_access 'accesses/edit' %>
                <%= link_to '編輯', edit_access_path(access) %>
            <% end %>

            <% if judgment_access 'accesses/del' %>
                <a url="#" class="del" id='/accesses/destroy/<%=access.id %>'> 停用 </a>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @accesses  %>
</div>

<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){

      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

  })
</script>
</div>
</div>
</div>
</section><!-- /.content -->
