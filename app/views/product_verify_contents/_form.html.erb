<%= form_for(@product_verify_content) do |f| %>
  <% if @product_verify_content.errors.any? %>

    <div id="error_explanation" style="display:none;">
      <% @product_verify_content.errors.full_messages.each do |msg| %>
          <%= msg %>
      <% end %>
    </div>

  <% end %>


  <div class="form-group">




      <div class="form-group">
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
          <font color="red" ><label>內容</label></font>
          <%= f.text_area :content  ,:class=>'form-control' %>
      </div>

      <div class="form-group">

        <%= f.file_field :file %>
      </div>





      <% if !@product_verify_content.id.nil? %>          


          <%= f.hidden_field :product_verify_id ,:value=>@product_verify_content.product_verify_id %>
          <input type="hidden" name="pv_id" value="<%=@product_verify_content.product_verify_id%>">

      <% else %>


          <%= f.hidden_field :product_verify_id ,:value=>@product_verify_id.to_i %>
          <input type="hidden" name="pv_id" value="<%=@product_verify_id %>">

      <% end  %>


      <%= f.hidden_field :state ,:value=>'Y' %>


  </div>



  <div class="box-footer">
      <button type="submit" class="btn btn-primary">確定</button>
      <%= link_to "取消", :back ,:class =>'btn btn-danger' %>
  </div>

<% end %>


<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    if ($('textarea').length > 0) {
        var data = $('textarea');
        $.each(data, function(i) {

            CKEDITOR.replace(data[i].id);
        });
    }
});
</script>
