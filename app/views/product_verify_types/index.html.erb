
<section class="content">
 <div class="row">
   <div class="col-xs-12">
       <div class="box">
           <div class="box-header">
               <h3 class="box-title">三證類型列表</h3>
           </div><!-- /.box-header -->
           <div class="box-body table-responsive">


             <table id="example2" class="table table-bordered table-striped">




  <thead>
    <tr>
      <th>名稱</th>
      <th>說明</th>
      <th>

        <% if judgment_access 'product_verify_types/new' %>
            <%= link_to '新增三證類型', new_product_verify_type_path %>
        <% end %>

      </th>

    </tr>
  </thead>

  <tbody>
    <% @product_verify_types.each do |product_verify_type| %>
      <tr>
        <td><%= product_verify_type.name %></td>
        <td><%= product_verify_type.verify_type_main.title %></td>
        <td>
          <% if judgment_access 'product_verify_types/edit' %>
              <%= link_to '編輯', edit_product_verify_type_path(product_verify_type) %>
          <% end %>

          <% if judgment_access 'product_verify_types/del' %>
              <a url="#" class="del" id='/product_verify_types/destroy/<%=product_verify_type.id %>'> 停用 </a>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<script src="/admin/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
  $('document').ready(function(){

      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

  })
</script>
