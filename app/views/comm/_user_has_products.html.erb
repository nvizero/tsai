
<div class="modal fade" id="info-pinfo<%=info.id%>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">

        <div class="modal-content">


            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><i class="fa fa-envelope-o"></i> Information</h4>
            </div>

            <div class="callout callout-warning">
                <h4><%=title%></h4>
            </div>



            <div class="modal-body">
              擁有產品 :<br>
                  <p class="text-green">

                        <% info.products.each do |proInfo| %>
                            <%=proInfo.title%><br>
                        <% end %>

                  </p>
            </div>

            <div class="modal-footer clearfix">
                <button type="submit" class="btn btn-primary" data-dismiss="modal"> 確定</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
