
<div class="modal fade" id="info-in-modal<%=product.id%>" tabindex="-1" role="dialog" aria-hidden="true" >
    <div class="modal-dialog" style="width:800px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><i class="fa fa-envelope-o"></i> 入庫列表</h4>
                <%#=simple_format(obj.title) %>
            </div>

            <div class="modal-body" style="padding:10px 0px 40px 0px;margin:20px 0px 10px 0px;">
                <%#=simple_format(obj.content) %>

                <h4 style="color:blue;" ><%=product.title %></h4>

                <div class="main_col">
                    <span class="col" id="col_code"   >單號</span>
                    <span class="col" id="col_serial">批號</span>
                    <span class="col" id="col_num">數量</span>
                    <span class="col" id="col_store_area">庫位</span>
                    <span class="col" id="col_save_date">有限期限 </span>
                </div>

                <hr style="margin:35px 0px 10px 0px;">

                <%
                  product.product_in_outs.each do |love|
                    if love.in_or_out == 'add'
                  %>
                      <div class="main_col">
                          <span class="col" id="col_code"   ><%=love.code %></span>
                          <span class="col" id="col_serial"><%=love.serial %></span>
                          <span class="col" id="col_num"><font color="red"><%=love.num %></font></span>
                          <span class="col" id="col_store_area"><%=love.store_area_id %></span>
                          <span class="col" id="col_save_date"> <%=love.save_date%></span>
                      </div>

                <%    end
                  end
                %>
                <hr style="margin:-40px 0px 10px 0px;">



            </div>

            <div class="modal-footer clearfix" style="margin-top:<%=product.product_in_outs.count*15 %>px;">
                <button type="submit" class="btn btn-primary" data-dismiss="modal"> 確定</button>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
