
<!-- Main content -->
<section class="content">
  <div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">三證狀態列表</h3>




                <div class="btn-group" id='head_btn'>
                    <button type="button" class="btn btn-info"><%=(@flag=='Y')?('未停用'):('停用') %></button>
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">

                        <li><%= link_to '未停用', {:controller =>'product_verify_states' , :action =>'index' , :state =>'Y'}  %></li>
                        <li><%= link_to '停用', {:controller =>'product_verify_states' , :action =>'index' , :state =>'N'}  %></li>

                    </ul>
                </div>

                  <%= link_to '新增三證狀態', new_product_verify_state_path ,:class=>'btn btn-success',:id=>'head_btn' %>
            </div><!-- /.box-header -->

            <div class="box-body table-responsive">


              <table id="example2" class="table table-bordered table-striped">

  <thead>
    <tr>
      <th>狀態名稱</th>

      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @product_verify_states.each do |product_verify_state| %>

    <%= render 'comm/info' , :info => product_verify_state , :users => @users_a , :title => "#{product_verify_state.title} 訊息"  %>

      <tr>
        <td><%= product_verify_state.title %></td>
        <td>

          <% if product_verify_state.state == 'Y'  %>
              <%= link_to '編輯', edit_product_verify_state_path(product_verify_state) , :class => 'btn btn-info btn-sm' %>
              <a url="#" class="del btn btn-danger btn-sm" id='/product_verify_states/destroy/<%=product_verify_state.id %>'> 停用 </a>
          <% else %>
              <button class="btn btn-danger disabled">己停用</button>
          <% end %>

            <a class="btn btn-warning info" id="<%=product_verify_state.id %>">
                訊息
            </a>

        </td>

      </tr>
    <% end %>
  </tbody>

  </table>

    <%= paginate @product_verify_states %>


  </div>

  <script src="/admin/js/jquery-2.1.4.min.js"></script>
  <script type="text/javascript">
  $('document').ready(function(){
      $('.del').click(function(){

          var url = $(this).attr('id');
          var n =confirm('確定停用！？');
          if(n){
            document.location.href=url;
          }

      });

      $('.info').click(function(){
          var t_id = $(this).attr('id');
          $('#info-modal'+t_id).modal('show');
      });

  })
  </script>

  </div>
  </div>
  </div>
  </section><!-- /.content -->





  <div class="" style="display:none;">


  <div class="dataTables_paginate paging_bootstrap"><ul class="pagination"><li class="prev disabled"><a href="#">← Previous</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li><a href="#">3</a></li><li><a href="#">4</a></li><li><a href="#">5</a></li><li class="next"><a href="#">Next → </a></li></ul></div>

  </div>
